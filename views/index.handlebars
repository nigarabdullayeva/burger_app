<header class = "jumbotron">
    <h1> It is Burger Time!</h1>
</header>

<main class = "container-fluid">
    <div class = "container">
      <div class="row">
         <div class= "col-md-6">
           <h2> Burgers to devour!</h2>
                <ul>
                  {{#each burgers}}
                     {{#unless devoured}}
                  {{> burgers/burger-block devoured=true}}
                     {{/unless}}
                  {{/each}}
                </ul>
         </div>

         <div class="col-md-6">
            <h2>Devoured Burgers!</h2>
             <ul>
                    {{#each burgers}}
                       {{#if devoured}}
                    {{> burgers/burger-block devoured=false}}
                      {{/if}}
                    {{/each}}
                </ul>
         </div>
      </div>
     </div>
   </div>


   <div class ="container-fluid" id= "newburDiv">
      <div class ="row">
        <div class ="col-md-12">
           <h2> Add your favorite burger!</h2>
           <form class="form-group mx-auto">
               <div class="form-group mx-sm-3 mb-2">
                 <label for="newBurger" class="control-label">Burger</label>
                 <input type="text" id="newBurger" name="burger_name">
                </div>
             <button type="submit" id="submitBtn" class="btn btn-outline-warning mb-2">Add Burger!</button>
         </form>
        </div>
      </div>
    </div>

</main>

